<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TiposEscolhaActivity">


        <EditText
            android:id="@+id/cadastro_paciente_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nome:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/cadastro_paciente_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Telefone:"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_nome"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_nome" />


        <EditText
            android:id="@+id/cadastro_paciente_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_telefone"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_telefone" />


        <EditText
            android:id="@+id/cadastro_paciente_instituicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instituição: "
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_email"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_email" />

        <TextView
            android:id="@+id/cadastro_paciente_quantidade_de_lp_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Quantidades de lesões por pressão:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_instituicao"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_instituicao" />

        <EditText
            android:id="@+id/cadastro_paciente_quantidade_de_lp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@+id/cadastro_paciente_quantidade_de_lp_txt"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_instituicao" />

        <EditText
            android:id="@+id/cadastro_paciente_localização_da_lp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localização da LP: "
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_instituicao"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_quantidade_de_lp" />

        <Spinner
            android:id="@+id/cadastro_paciente_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_localização_da_lp"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_localização_da_lp" />

        <EditText
            android:id="@+id/cadastro_paciente_estagio_lp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estágio LP: "
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_sexo"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_sexo" />


        <EditText
            android:id="@+id/cadastro_paciente_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de nascimento"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_estagio_lp"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_estagio_lp" />

        <EditText
            android:id="@+id/cadastro_paciente_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classificação"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_data"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_data"/>

        <EditText
            android:id="@+id/cadastro_paciente_risco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade de LP: "
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintStart_toStartOf="@+id/cadastro_paciente_tipo"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paciente_tipo" />





    </android.support.constraint.ConstraintLayout>
</ScrollView>
