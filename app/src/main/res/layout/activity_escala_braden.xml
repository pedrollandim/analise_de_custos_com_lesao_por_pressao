<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/escala_braden_percepcao_sensorial"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:hint="Percepção sensorial"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Switch
                android:id="@+id/escala_braden_ps_1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:text="Muito limitado"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_percepcao_sensorial"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_percepcao_sensorial"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_percepcao_sensorial" />

            <Switch
                android:id="@+id/escala_braden_ps_2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Levemente limitado"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_ps_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_ps_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_ps_1" />

            <Switch
                android:id="@+id/escala_braden_ps_3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Nenhuma limitação"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_ps_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_ps_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_ps_2" />

            <Switch
                android:id="@+id/escala_braden_ps_4"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Totalmente limitado"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_ps_3"
                app:layout_constraintStart_toEndOf="@id/escala_braden_ps_3"
                app:layout_constraintTop_toTopOf="@id/escala_braden_ps_3" />

            <TextView
                android:id="@+id/escala_braden_umidade"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:text="Umidade"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_percepcao_sensorial"
                app:layout_constraintStart_toStartOf="@id/escala_braden_percepcao_sensorial"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_ps_1" />

            <Switch
                android:id="@+id/escala_braden_u_1"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Completamente molhada"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_umidade"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_umidade"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_umidade" />

            <Switch
                android:id="@+id/escala_braden_u_2"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Muito molhada"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_u_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_u_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_u_1" />

            <Switch
                android:id="@+id/escala_braden_u_3"
                android:layout_width="111dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Ocasionalmente molhada"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_u_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_u_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_u_2" />

            <Switch
                android:id="@+id/escala_braden_u_4"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Raramente molhada"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_u_3"
                app:layout_constraintStart_toEndOf="@id/escala_braden_u_3"
                app:layout_constraintTop_toTopOf="@id/escala_braden_u_3" />

            <TextView
                android:id="@+id/escala_braden_atividade_fisica"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="30dp"
                android:hint="Atividade   física"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_umidade"
                app:layout_constraintStart_toStartOf="@id/escala_braden_umidade"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_u_1" />

            <Switch
                android:id="@+id/escala_braden_at_1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Acamado"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_atividade_fisica"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_atividade_fisica"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_atividade_fisica" />

            <Switch
                android:id="@+id/escala_braden_at_2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Confinado à cadeira"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_at_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_at_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_at_1" />

            <Switch
                android:id="@+id/escala_braden_at_3"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Anda ocasionalmente"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_at_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_at_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_at_2" />

            <Switch
                android:id="@+id/escala_braden_at_4"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Anda frequentemente"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_at_3"
                app:layout_constraintStart_toEndOf="@id/escala_braden_at_3"
                app:layout_constraintTop_toTopOf="@id/escala_braden_at_3" />

            <TextView
                android:id="@+id/escala_braden_Mobilidade"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="30dp"
                android:hint="Mobilidade"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_atividade_fisica"
                app:layout_constraintStart_toStartOf="@id/escala_braden_atividade_fisica"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_at_1" />

            <Switch
                android:id="@+id/escala_braden_m_1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Totalmente imóvel"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_Mobilidade"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_Mobilidade"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_Mobilidade" />

            <Switch
                android:id="@+id/escala_braden_m_2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Bastante limitado"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_m_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_m_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_m_1" />

            <Switch
                android:id="@+id/escala_braden_m_3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Levemente limitado"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_m_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_m_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_m_2" />

            <Switch
                android:id="@+id/escala_braden_m_4"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Não apresenta limitações"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_m_3"
                app:layout_constraintStart_toEndOf="@id/escala_braden_m_3"
                app:layout_constraintTop_toTopOf="@id/escala_braden_m_3" />

            <TextView
                android:id="@+id/escala_braden_nutricao"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="30dp"
                android:hint="Nutrição"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_Mobilidade"
                app:layout_constraintStart_toStartOf="@id/escala_braden_Mobilidade"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_m_1" />

            <Switch
                android:id="@+id/escala_braden_n_1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Muito pobre"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_nutricao"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_nutricao"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_nutricao" />

            <Switch
                android:id="@+id/escala_braden_n_2"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Provavelmente inadequada"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_n_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_n_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_n_1" />

            <Switch
                android:id="@+id/escala_braden_n_3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Adequada"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_n_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_n_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_n_2" />

            <Switch
                android:id="@+id/escala_braden_n_4"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Excelente"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_n_3"
                app:layout_constraintStart_toEndOf="@id/escala_braden_n_3"
                app:layout_constraintTop_toTopOf="@id/escala_braden_n_3" />

            <TextView
                android:id="@+id/escala_braden_friccao_cisalhamento"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_margin="30dp"
                android:hint="Fricção Cisalhamento"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_nutricao"
                app:layout_constraintStart_toStartOf="@id/escala_braden_nutricao"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_n_1" />

            <Switch
                android:id="@+id/escala_braden_fc_1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Problema"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/escala_braden_friccao_cisalhamento"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/escala_braden_friccao_cisalhamento"
                app:layout_constraintTop_toBottomOf="@id/escala_braden_friccao_cisalhamento" />

            <Switch
                android:id="@+id/escala_braden_fc_2"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Problema em potencial"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_fc_1"
                app:layout_constraintStart_toEndOf="@id/escala_braden_fc_1"
                app:layout_constraintTop_toTopOf="@id/escala_braden_fc_1" />

            <Switch
                android:id="@+id/escala_braden_fc_3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:text="Nenhum problema"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/escala_braden_fc_2"
                app:layout_constraintStart_toEndOf="@id/escala_braden_fc_2"
                app:layout_constraintTop_toTopOf="@id/escala_braden_fc_2" />



        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</HorizontalScrollView>