<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiscoModeradoActivity">

        <TextView
            android:id = "@+id/risco_moderado_titulo"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "12dp"
            android:text = "Risco moderado"
            android:textSize = "25dp"
            android:textStyle = "bold"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"/>

        <TextView
            android:id = "@+id/risco_moderado_t1"
            android:layout_width = "350dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "12dp"
            android:text = "	Manutenção da higiene corporal, mantendo a pele limpa e seca."
