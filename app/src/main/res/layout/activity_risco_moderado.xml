            android:layout_margin = "12dp"
            android:text = "	Uso de colchão especial, almofadas e/ou de coxins para redistribuir a pressão. "
            android:textSize = "20dp"
            android:textStyle = "bold"
            app:layout_constraintEnd_toEndOf = "@id/risco_moderado_i3"
            app:layout_constraintStart_toStartOf = "@id/risco_moderado_i3"
            app:layout_constraintTop_toBottomOf = "@id/risco_moderado_i3"/>
        <ImageView
            android:id = "@+id/risco_moderado_i4"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/lpcolchao"
            app:layout_constraintEnd_toEndOf = "@id/risco_moderado_t6"
            app:layout_constraintStart_toStartOf = "@id/risco_moderado_t6"
            app:layout_constraintTop_toBottomOf = "@id/risco_moderado_t6"/>
