            app:layout_constraintStart_toStartOf = "@id/risco_moderado_t3"
            app:layout_constraintTop_toBottomOf = "@id/risco_moderado_t3"/>
        <ImageView
            android:id = "@+id/risco_moderado_i2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"

            android:background = "@drawable/lpcurativo"
            app:layout_constraintEnd_toEndOf = "@id/risco_moderado_t4"
            app:layout_constraintStart_toStartOf = "@id/risco_moderado_t4"
            app:layout_constraintTop_toBottomOf = "@id/risco_moderado_t4"/>
